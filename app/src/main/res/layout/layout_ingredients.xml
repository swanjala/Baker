<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:elevation="4dp"
    android:layout_marginBottom="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_ingredient"
            android:layout_width="@dimen/layout_ingredients_tv_ingredients_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_ingredients_tv_ingredients_margin_bottom"
            android:layout_marginEnd="@dimen/layout_ingredients_tv_ingredients_margin_end"
            android:layout_marginRight="@dimen/layout_ingredients_tv_ingredients_margin_right"
            android:layout_marginTop="@dimen/layout_ingredients_tv_ingredients_margin_top"
            android:hint="Ingredient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="@dimen/layout_ingredients_tv_quantity_layout_width"
            android:layout_height="@dimen/layout_ingredients_tv_quantity_layout_height"
            android:layout_marginLeft="@dimen/layout_ingredients_tv_quantity_margin_left"
            android:layout_marginStart="@dimen/layout_ingredients_tv_quantity_margin_start"
            android:layout_marginTop="@dimen/layout_ingredients_tv_quantity_margin_top"
            android:hint="Quantity"
            app:layout_constraintBottom_toBottomOf="@+id/tv_measure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_measure"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_measure"
            android:layout_width="@dimen/layout_ingredients_tv_measure_layout_width"
            android:layout_height="@dimen/layout_ingredients_tv_measure_layout_height"
            android:layout_marginBottom="@dimen/layout_ingredients_tv_measure_margin_bottom"
            android:layout_marginEnd="@dimen/layout_ingredients_tv_measure_margin_end"
            android:layout_marginLeft="@dimen/layout_ingredients_tv_measure_margin_left"
            android:layout_marginRight="@dimen/layout_ingredients_tv_measure_margin_right"
            android:layout_marginStart="@dimen/layout_ingredients_tv_measure_margin_start"
            android:layout_marginTop="@dimen/layout_ingredients_tv_measure_margin_top"
            android:hint="Measure"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ingredient"
            app:layout_constraintEnd_toStartOf="@+id/tv_ingredient"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toEndOf="@+id/tv_quantity"
            app:layout_constraintTop_toTopOf="@+id/tv_ingredient"
            app:layout_constraintVertical_bias="0.37" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>